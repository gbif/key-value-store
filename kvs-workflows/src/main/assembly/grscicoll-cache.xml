<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>grscicoll-cache</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <!--
    Dependencies here are references to POM dependencies.
  -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <fileMode>0644</fileMode>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>org.gbif.kvs:kvs-indexing:jar</include>
      </includes>
      <excludes>
        <exclude>*:tests</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}/oozie-workflows/grscicoll</directory>
      <outputDirectory>/grscicoll-cache-workflow/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <outputDirectory>/</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>**/*.sh</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
