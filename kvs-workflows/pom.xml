<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>key-value-store</artifactId>
    <groupId>org.gbif.kvs</groupId>
    <version>1.15-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>kvs-workflows</artifactId>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>org.gbif.kvs</groupId>
      <artifactId>kvs-indexing</artifactId>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>**/coordinator.xml</include>
          <include>**/conf/hive-default.xml</include>
          <include>**/workflow.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <appendAssemblyId>false</appendAssemblyId>
          <finalName>grscicoll-cache-workflow</finalName>
          <descriptors>
            <descriptor>src/main/assembly/grscicoll-cache.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-oozie</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <configuration>
          <createDependencyReducedPom>false</createDependencyReducedPom>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
                <exclude>core-site.xml</exclude>
                <exclude>hbase-site.xml</exclude>
                <exclude>mapred-site.xml</exclude>
                <exclude>yarn-site.xml</exclude>
                <exclude>org.apache.hbase:hbase-shaded-client</exclude>
                <exclude>**/org/apache/hadoop/mapreduce/**</exclude>
                <exclude>**/org/apache/hadoop/mapred/**</exclude>
                <exclude>**/org/apache/hadoop/yarn/**</exclude>
                <exclude>**/org/apache/hadoop/hive/shims/**</exclude>
<!--                <exclude>**/org/apache/hadoop/hive/metastore/**</exclude>-->
              </excludes>
            </filter>
          </filters>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
              </transformers>
              <relocations>
                <relocation>
                  <pattern>okio</pattern>
                  <shadedPattern>com.shaded.okio</shadedPattern>
                </relocation>
                <!-- Important: Do not relocate org.apache.hadoop.hive -->
<!--                <relocation>-->
<!--                  <pattern>org.apache.hadoop.hive.conf</pattern>-->
<!--                  <shadedPattern>h122.org.apache.hadoop.hive.conf</shadedPattern>-->
<!--                </relocation>-->
                <relocation>
                  <pattern>org.apache.hadoop.hive.ql</pattern>
                  <shadedPattern>h122.org.apache.hadoop.hive.ql</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.hadoop.hive.metastore</pattern>
                  <shadedPattern>h122.org.apache.hadoop.hive.metastore</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.hadoop.hive.common</pattern>
                  <shadedPattern>h122.org.apache.hadoop.hive.common</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.hadoop.hive.thrift</pattern>
                  <shadedPattern>h122.org.apache.hadoop.hive.thrift</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.fasterxml.jackson</pattern>
                  <shadedPattern>com.shaded.fasterxml.jackson</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>dev</id>
      <properties>
        <hive.metastore.uris>thrift://c3hivemetastore.gbif-dev.org:9083</hive.metastore.uris>
        <grscicoll.cache.hive.hdfs.out>/user/hive/warehouse/dev.db</grscicoll.cache.hive.hdfs.out>
      </properties>
    </profile>
  </profiles>

</project>